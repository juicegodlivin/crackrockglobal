{
  "designSystem": {
    "brand": {
      "primaryColor": "#FFD700",
      "secondaryColor": "#000000",
      "accentColor": "#FF6B35",
      "backgroundColor": "#FFFFFF",
      "darkBackground": "#1A1A1A"
    },
    "typography": {
      "fontFamilies": {
        "primary": "Arial, Helvetica, sans-serif",
        "display": "Arial Black, sans-serif"
      },
      "scales": {
        "heroTitle": {
          "fontSize": "48-56px",
          "fontWeight": "900",
          "lineHeight": "1.1"
        },
        "sectionTitle": {
          "fontSize": "32-40px",
          "fontWeight": "800",
          "lineHeight": "1.2"
        },
        "cardTitle": {
          "fontSize": "20-24px",
          "fontWeight": "700",
          "lineHeight": "1.3"
        },
        "bodyLarge": {
          "fontSize": "16-18px",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "bodySmall": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "1.4"
        }
      }
    },
    "layout": {
      "maxWidth": "1200px",
      "gridSystem": "12-column",
      "breakpoints": {
        "mobile": "320-768px",
        "tablet": "768-1024px",
        "desktop": "1024px+"
      },
      "spacing": {
        "xs": "8px",
        "sm": "16px",
        "md": "24px",
        "lg": "32px",
        "xl": "48px",
        "xxl": "64px"
      }
    },
    "components": {
      "hero": {
        "structure": "split-layout",
        "leftContent": {
          "width": "50-60%",
          "elements": ["headline", "subheadline", "cta-button"],
          "textAlignment": "left"
        },
        "rightContent": {
          "width": "40-50%",
          "background": "dark-with-illustration",
          "borderRadius": "16px"
        }
      },
      "navigationBar": {
        "style": "sticky-top",
        "background": "white-with-border",
        "height": "60-80px",
        "elements": {
          "logo": "left-aligned",
          "navLinks": "center-horizontal",
          "searchIcon": "right-aligned"
        }
      },
      "cards": {
        "grid": {
          "columns": "3-column",
          "gap": "24px",
          "cardStyle": {
            "background": "white",
            "border": "1px solid #E0E0E0",
            "borderRadius": "8px",
            "padding": "24px",
            "hover": "subtle-shadow"
          }
        },
        "content": {
          "icon": "top-left",
          "title": "bold-prominent",
          "description": "regular-text",
          "link": "bottom-aligned"
        }
      },
      "contentSections": {
        "twoColumn": {
          "layout": "50-50-split",
          "imagePosition": "alternating",
          "spacing": "64px-between-sections"
        },
        "textBlock": {
          "maxWidth": "800px",
          "centered": true
        }
      },
      "buttons": {
        "primary": {
          "background": "#000000",
          "color": "#FFFFFF",
          "padding": "12px 24px",
          "borderRadius": "4px",
          "fontSize": "14px",
          "fontWeight": "600",
          "hover": "opacity-0.8"
        },
        "secondary": {
          "background": "transparent",
          "border": "2px solid #000000",
          "color": "#000000",
          "padding": "12px 24px",
          "borderRadius": "4px"
        }
      },
      "footer": {
        "background": "#000000",
        "textColor": "#FFFFFF",
        "layout": "multi-column",
        "sections": {
          "columns": "4-6",
          "linkLists": true,
          "socialIcons": true,
          "newsletter": false
        }
      }
    },
    "patterns": {
      "colorBlocks": {
        "usage": "section-backgrounds",
        "colors": ["#FFD700", "#FF6B35", "#000000"],
        "style": "full-width-bands"
      },
      "illustrations": {
        "style": "geometric-minimalist",
        "colors": "brand-palette",
        "usage": ["hero", "feature-sections"]
      },
      "icons": {
        "style": "outlined",
        "size": "24-32px",
        "weight": "2px-stroke"
      }
    },
    "interactions": {
      "scrollBehavior": "smooth",
      "hoverEffects": {
        "links": "underline",
        "cards": "subtle-lift",
        "buttons": "opacity-change"
      },
      "animations": {
        "onScroll": "fade-in-up",
        "timing": "ease-out",
        "duration": "0.3s"
      }
    },
    "responsive": {
      "mobileFirst": true,
      "stackingBehavior": {
        "columns": "vertical-stack-on-mobile",
        "navigation": "hamburger-menu",
        "spacing": "reduced-on-mobile"
      }
    },
    "accessibility": {
      "contrastRatio": "WCAG-AA",
      "focusStates": "visible-outline",
      "altText": "required",
      "semanticHTML": true
    }
  }
}